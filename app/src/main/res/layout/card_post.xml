<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:backgroundTint="@color/white"
    app:cardElevation="10dp"
    android:layout_marginTop="10sp"
    >

    <TextView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:text="&#8942;"
        android:textSize="20sp"
        android:id="@+id/txt_option"
        android:layout_gravity="right"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/post_profilePic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        app:civ_border_width="1dp"
        app:civ_border_overlay="true"
        app:civ_border_color="#FF000000" />

    <TextView
        android:id="@+id/textView_post_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:text="UserName"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_post_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:text="Location"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageview_post_image"
        android:layout_width="340dp"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/textView_post_blurb"
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="450dp"
        android:textStyle="italic"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque interdum rutrum sodales. Nullam mattis fermentum libero, non volutpat."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16dp" />


</androidx.cardview.widget.CardView>